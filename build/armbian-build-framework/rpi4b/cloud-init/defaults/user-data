#cloud-config

# Setup hostname
hostname: "{{ purpose }}-{{ env }}-{{ number }}" # we use jinja2 Templating to do this, verify if this is supported, should be

# Create our user
users:
  - name: sysadmin
    sudo: ["ALL=(ALL) NOPASSWD:ALL"]
    homedir : /home/sysadmin
    shell: /bin/zsh
    ssh_authorized_keys:
      - ssh-rsa  sysadmin@meti.pro


# Set the locale and keyboard layout
locale: nl_BE.UTF-8
keyboard:
  layout: be

# Timezone setup
timezone: Europe/Brussels

# Preserve hostname
preserve_hostname: false

# Update and upgrade packages on first boot
package_update: true
package_upgrade: true

